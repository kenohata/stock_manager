<ol class="breadcrumb purchase_orders">
  <li><%= link_to "発注書一覧", purchase_orders_path %></li>
</ol>

<%= link_to "発注書を作成する", new_purchase_order_path %>

<hr>

<table>
  <thead>
    <% @products.each do |product| %>
      <th>
        <p>
          <%= product.name %>
        </p>

        <img src="<%= product.image %>" width="60" height="60">
      </th>
    <% end %>
    <th></th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <% @products.each do |product| %>
          <td>
            <% case item = order.items.find{ |item| item.product == product } %>
            <% when PurchaseOrderItem %>
              <%= item.quantity %>
            <% when StockOrderItem %>
              <%= item.quantity %>
            <% else %>
              0
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
