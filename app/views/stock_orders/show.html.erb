<ol class="breadcrumb stock_orders">
  <li><%= link_to "納品書一覧", stock_orders_path %></li>
  <li><%= @order.created_at.strftime " %Y/%m/%d %H:%m" %>の納品書</li>
</ol>

<h1>納品書</h1>

納品日時: <%= @order.created_at.strftime " %Y/%m/%d %H:%m" %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>数量</th>
      <th>単価</th>
    </tr>
  </thead>
  <tbody>
    <%- @order.items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
